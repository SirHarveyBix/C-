{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "command": "dotnet",
      "type": "shell",
      "args": [
        "build",
        "${workspaceFolder}/00. init.sln",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary;"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "run",
      "command": "dotnet",
      "type": "shell",
      "args": [
        "run",
        "${workspaceFolder}/00. init.sln",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary;"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "watch",
      "command": "dotnet",
      "type": "shell",
      "args": [
        "watch",
        "run",
        "--project",
        "${workspaceFolder}/00. init.sln"
      ],
      "problemMatcher": "$msCompile"
    }
  ]
}